{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "outDir": "./dist",
    // "rootDir": "./src",
    // "baseUrl": "./src",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {
      "@shared/*": ["../../shared/*"]
    }
  },
  "include": ["src/**/*"]
  // "exclude": ["node_modules", "../../frontend"]
}
